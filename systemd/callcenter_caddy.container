[Unit]
Description=Reverse proxy
After=local-fs.target
Wants=callcenter_rag.service

[Container]
Image=docker.io/caddy:2-alpine
Pod=callcenter.pod
Environment=HOST=callcenter.thoughtspile.tech
Volume=../caddy/conf/Caddyfile:/etc/caddy/Caddyfile:ro
Volume=caddy_data:/data
Volume=caddy_config:/config

[Service]
Restart=always
